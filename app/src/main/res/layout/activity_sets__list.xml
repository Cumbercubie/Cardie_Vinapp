<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyListActivity"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_centerInParent="true"
    android:background="@color/colorBackground"
    >
    <RelativeLayout
        android:background="@android:color/transparent"
        android:id="@+id/navCardie"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:background="@drawable/ic_arrow_back_black_24dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true">
        </Button>
        <TextView
            android:id="@+id/Title"
            android:text="Cardie"
            android:textSize="40dp"
            android:layout_centerInParent="true"
            android:fontFamily="@font/nunitoblack"
            android:textColor="@color/colorGradientEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </RelativeLayout>
    <com.ismaeldivita.chipnavigation.ChipNavigationBar
        android:layout_below="@id/navCardie"
        android:id="@+id/NavBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGradientStart"
        android:elevation="16dp"
        android:padding="8dp"
        app:cnb_orientationMode="horizontal"
        app:cnb_menuResource="@menu/menu_nav"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/SetRV"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_below="@id/NavBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>